<?xml version="1.0" encoding="utf-8"?>
<AbsoluteLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".revisarTarros">

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="723dp"
        android:layout_height="357dp"
        android:layout_x="-91dp"
        android:layout_y="-165dp"
        app:srcCompat="@drawable/backuser" />

    <EditText
        android:id="@+id/wordT"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="58dp"
        android:layout_y="204dp"
        android:ems="10"
        android:inputType="textPersonName" />

    <TextView
        android:id="@+id/textView17"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="120dp"
        android:layout_y="126dp"
        android:text="Buscar Tarros"
        android:textColor="#FFFFFF"
        android:textSize="24sp"
        android:textStyle="bold" />

    <ImageButton
        android:id="@+id/helpT"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="297dp"
        android:layout_y="198dp"
        app:srcCompat="@android:drawable/ic_menu_help" />

    <Button
        android:id="@+id/buscarT"
        android:background="@drawable/btn_uno"
        android:textColor="@drawable/txt_btn_uno"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="150dp"
        android:layout_y="269dp"
        android:onClick="mostrarT"
        android:text="buscar" />

    <ListView
        android:id="@+id/listaT"
        android:layout_width="match_parent"
        android:layout_height="396dp"
        android:layout_x="1dp"
        android:layout_y="333dp" />

    <ImageView
        android:id="@+id/imageView13"
        android:layout_width="101dp"
        android:layout_height="70dp"
        android:layout_x="20dp"
        android:layout_y="105dp"
        app:srcCompat="@drawable/search" />
</AbsoluteLayout>