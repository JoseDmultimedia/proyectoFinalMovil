<?xml version="1.0" encoding="utf-8"?>
<AbsoluteLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="1094dp"
        android:layout_height="495dp"
        android:layout_x="-207dp"
        android:layout_y="0dp"
        app:srcCompat="@drawable/background1" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="378dp"
        android:layout_height="168dp"
        android:layout_x="1dp"
        android:layout_y="3dp"
        app:srcCompat="@drawable/logoambientalapp" />

    <EditText
        android:id="@+id/passT"
        android:layout_width="226dp"
        android:layout_height="wrap_content"
        android:layout_x="139dp"
        android:layout_y="578dp"
        android:ems="10"
        android:inputType="textPassword" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="49dp"
        android:layout_y="585dp"
        android:text="Password"
        android:textColor="#000000"
        android:textSize="14sp" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="28dp"
        android:layout_height="57dp"
        android:layout_x="19dp"
        android:layout_y="500dp"
        app:srcCompat="@drawable/user" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="50dp"
        android:layout_y="519dp"
        android:text="Username"
        android:textColor="#000000"
        android:textSize="14sp" />

    <EditText
        android:id="@+id/userT"
        android:layout_width="229dp"
        android:layout_height="wrap_content"
        android:layout_x="139dp"
        android:layout_y="504dp"
        android:ems="10"
        android:inputType="textPersonName" />

    <TextView
        android:layout_width="85dp"
        android:layout_height="wrap_content"
        android:layout_x="150dp"
        android:layout_y="447dp"
        android:text="Login"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button"
        android:layout_width="105dp"
        android:layout_height="wrap_content"
        android:layout_x="138dp"
        android:layout_y="650dp"
        android:background="@drawable/btn_uno"
        android:onClick="login"
        android:text="Entrar"
        android:textColor="@drawable/txt_btn_uno"
        android:textSize="14sp" />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="28dp"
        android:layout_height="58dp"
        android:layout_x="19dp"
        android:layout_y="562dp"
        app:srcCompat="@drawable/password" />

</AbsoluteLayout>